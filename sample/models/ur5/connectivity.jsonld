  "pairs" : [
    { "@type" : "kpair", "joint" : "shoulder_pan" , "link1": "shoulder", "link2": "base" },
    { "@type" : "kpair", "joint" : "shoulder_lift", "link1": "shoulder", "link2": "upperarm" },
    { "@type" : "kpair", "joint" : "elbow"        , "link1": "upperarm", "link2": "forearm" },
    { "@type" : "kpair", "joint" : "wr1"          , "link1": "forearm" , "link2": "wrist_1" },
    { "@type" : "kpair", "joint" : "wr2"          , "link1": "wrist_1" , "link2": "wrist_2" },
    { "@type" : "kpair", "joint" : "wr3"          , "link1": "wrist_2" , "link2": "wrist_3" }
