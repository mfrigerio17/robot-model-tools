{
  "@context": {
    "ROB" : "https://gitlab.kuleuven.be/rob/",
    "link" : "ROB:rigid_body",
    "kind" : "ROB:joint_type",
    "kpair": "ROB:kinematic_pair",

    "bodies"  : "ROB:connectivity/links",
    "joints" : "ROB:connectivity/joints",
    "pairs"  : "ROB:connectivity/kpairs",
    "robot" : {
        "@id" : "ROB:robot",
        "@type" : "@id"
    },

    "joint" : "ROB:kinematic_pair/joint",
    "link1" : "ROB:kinematic_pair/link1",
    "link2" : "ROB:kinematic_pair/link2"
  },

  "@type": "mechanism_connectivity",

  "robot" : "ROB:robot_models:UR5",

  "bodies" : [
    { "@type" : "link", "@id" : "base"},
    { "@type" : "link", "@id" : "shoulder"},
    { "@type" : "link", "@id" : "upperarm"},
    { "@type" : "link", "@id" : "forearm"},
    { "@type" : "link", "@id" : "wrist_1"},
    { "@type" : "link", "@id" : "wrist_2"},
    { "@type" : "link", "@id" : "wrist_3"}
